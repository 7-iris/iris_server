<h2>Signup</h2>

<%= form_for @conn, registration_path(@conn, :signup), [as: :user], fn f -> %>
  <div class="form-group">
    <%= label f, :email, class: "control-label" %>
    <%= text_input f, :email, class: "form-control", autofocus: true %>
    <%= error_tag f, :email %>
  </div>

  <div class="form-group">
    <%= submit "Signup", class: "btn btn-primary" %>
  </div>
<% end %>
